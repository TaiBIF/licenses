        "type" : "string",
        "enum" : [ "HAST", "TAIF", "TAI", "NMNS", "TESRI1", "TESRI2", "TESRI3", "ASIZ", "FRI", "NMMB", "NMMST", "NTHU", "NTM", "NTOU", "NTU", "BCRC", "FACT", "BIRD", "PLANTAE", "TAD", "TMCD", "MLSP", "DARC", "TARI", "NSYSU", "FA", "NCYU", "FORESTRY_BUREAU", "CPAMITW", "TESRI-FB-EnjoyMoths" ]
      }
    }
  }
